<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.RecipeMapper">
    <select id="queryList" resultMap="BaseResultMap">
        SELECT r.*,
        (SELECT COUNT(*) FROM flow_index WHERE content_module = 'RECIPE' AND content_id = r.id AND type=1) AS viewCount
        FROM recipe r
        <where>
            1 = 1
            <if test="name != null and name != ''">
                AND r.name like concat('%',#{name},'%')
            </if>
            <if test="isAudit != null">
                AND r.is_audit = #{isAudit}
            </if>
            <if test="userId != null">
                AND r.user_id = #{userId}
            </if>
            <if test="typeId != null">
                AND r.type_id = #{typeId}
            </if>
            <if test="startTime != null and endTime != null">
                AND r.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
            ORDER BY r.id DESC
            <if test="current != null and size != null">
                LIMIT #{current},#{size}
            </if>
    </select>
    <select id="queryListCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM recipe r
        <where>
            1 = 1
            <if test="name != null and name != ''">
                AND r.name like concat('%',#{name},'%')
            </if>
            <if test="isAudit != null">
                AND r.is_audit = #{isAudit}
            </if>
            <if test="userId != null">
                AND r.user_id = #{userId}
            </if>
            <if test="typeId != null">
                AND r.type_id = #{typeId}
            </if>
            <if test="startTime != null and endTime != null">
                AND r.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>
    <select id="listIds" resultType="java.lang.Integer">
        SELECT id FROM recipe WHERE is_audit=TRUE
    </select>
    <select id="listByRecommendIDS" resultType="cn.kmbeast.pojo.vo.RecipeVO">
        SELECT *,
        (SELECT COUNT(*) FROM flow_index WHERE content_module = 'RECIPE' AND content_id = r.id AND type=1) AS viewCount
        FROM recipe r
        <where>
            <if test="recommendIDS != null and recommendIDS.size > 0">
                r.id IN
           <foreach collection="recommendIDS" open="(" close=")" separator="," item="id">
               #{id}
           </foreach>
            </if>
        </where>
    </select>
    <select id="selectRecipeListWithViewCountByIds" resultType="cn.kmbeast.pojo.vo.RecipeVO">
        SELECT
       *,
        (SELECT COUNT(*) FROM flow_index WHERE content_module = 'RECIPE' AND content_id = r.id AND type=1) AS viewCount
        FROM recipe r
        <where>
            <!-- 当ids不为空时，添加IN条件 -->
            <if test="list != null and list.size() > 0">
                r.id IN
                <foreach collection="list" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.vo.RecipeVO">
        <id column="id" property="id"/>
        <result column="type_id" property="typeId"/>
        <result column="is_audit" property="isAudit"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
</mapper>
