<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.DietHistoryMapper">
    <select id="list" resultMap="BaseResultMap">
        SELECT dh.*,u.user_name,u.user_avatar,r.name
        FROM diet_history dh
        left join user u on dh.user_id = u.id
        left join recipe r on dh.recipe_id = r.id
        <where>
            1 = 1
            <if test="recipeId != null">
                AND dh.recipe_id = #{recipeId}
            </if>
            <if test="userId != null">
                AND dh.user_id = #{userId}
            </if>
            <if test="detail != null">
                AND dh.detail = #{detail}
            </if>
            <if test="startTime != null and endTime != null">
                AND dh.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
            ORDER BY dh.id DESC
            <if test="current != null and size != null">
                LIMIT #{current},#{size}
            </if>

    </select>
    <select id="queryListCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM diet_history dh
        left join user u on dh.user_id = u.id
        left join recipe r on dh.recipe_id = r.id
        <where>
            1 = 1
            <if test="recipeId != null">
                AND dh.recipe_id = #{recipeId}
            </if>
            <if test="userId != null">
                AND dh.user_id = #{userId}
            </if>
            <if test="detail != null">
                AND dh.detail = #{detail}
            </if>
            <if test="startTime != null and endTime != null">
                AND dh.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.vo.DietHistoryVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="recipe_id" property="recipeId"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
        <result column="user_name" property="userName"/>
        <result column="name" property="recipeName"/>
        <result column="user_avatar" property="userAvatar"/>
    </resultMap>

</mapper>
