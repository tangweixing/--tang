<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.HealthRecordMapper">
    <select id="list" resultMap="BaseResultMap">
        SELECT hr.*,u.user_name,u.user_avatar,hm.name,hm.unit,hm.normal_value
        FROM health_record hr
        left join user u on hr.user_id = u.id
        left join health_model hm on hr.health_model_id = hm.id
        <where>
            1 = 1
            <if test="healthModelId != null">
                AND hr.health_model_id = #{healthModelId}
            </if>
            <if test="userId != null">
                AND hr.user_id = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND hr.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
            ORDER BY hr.id DESC
            <if test="current != null and size != null">
                LIMIT #{current},#{size}
            </if>

    </select>
    <select id="queryListCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM health_record hr
        left join user u on hr.user_id = u.id
        left join health_model hm on hr.health_model_id = hm.id
        <where>
            1 = 1
            <if test="healthModelId != null">
                AND hr.health_model_id = #{healthModelId}
            </if>
            <if test="userId != null">
                AND hr.user_id = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND hr.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.vo.HealthRecordVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="health_model_id" property="healthModelId"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
        <result column="user_name" property="userName"/>
        <result column="name" property="healthModelName"/>
        <result column="unit" property="healthModelUnit"/>
        <result column="normal_value" property="normalValue"/>
        <result column="user_avatar" property="avatar"/>
    </resultMap>

</mapper>
